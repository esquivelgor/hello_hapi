#!/usr/bin/env groovy

pipeline {
    agent {
        docker {
            image 'node:14' // Use a specific version tag
        }
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                sh 'npm test'
            }
        }
    }
}
